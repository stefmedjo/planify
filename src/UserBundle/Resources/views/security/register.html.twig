{% extends "templates/template.html.twig" %}
{% block title %}
    Create an Account
{% endblock %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-4 offset-md-4 col-sm-12 col-xs-12">
                {{form_start(form)}}
                    <div class="form-group">
                        <label for="username">Username</label>
                        {{ form_widget(form.email) }}
                    </div>
                    <div class="form-group">
                        <label for="password1">Enter your password</label>
                        {{ form_widget(form.plainPassword.first) }}
                    </div>
                    <div class="form-group">
                        <label for="password1">Re enter your password</label>
                        {{ form_widget(form.plainPassword.second) }}
                    </div>
                    <div class="form-group">
                        <label for="fname">First Name</label>
                        {{ form_widget(form.fname) }}
                    </div>
                    <div class="form-group">
                        <label for="lname">Last Name</label>
                        {{ form_widget(form.lname) }}
                    </div>
                    <div class="form-group">
                        <label for="lname">Company's name</label>
                        {{ form_widget(form.companyName) }}
                    </div>
                    <button class="btn btn-primary btn-block" type="submit">Create Account</button>
                {{form_end(form)}}
                <div class="text-center">
                    By clicking on Create Account, you are accepting our CGU.
                </div>
            </div>
        </div>
    </div>
{% endblock %}