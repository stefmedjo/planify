{% extends "templates/template.html.twig" %}
{% block title %}
    Login
{% endblock %}
{% block body %}
<div class="center-page-box">
    <div class="container">
        <div class="row">
            <div class="col-md-4 offset-md-4 col-sm-12 col-xs-12">

                {% if error %}
                    <div>
                        {{ error.messageKey|trans(error.messageData, "security") }}
                    </div>
                {% endif %}

                <form action="{{ path('login') }}" method="POST">
                    <div class="form-group">
                        <label for="username">Username:</label>
                        <input type="text" name="_username" id="username" value="{{ last_username }}" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" name="_password" id="password" class="form-control" />
                    </div>
                    <!--
                    <input type="hidden" name="_target_path" value="" />
                    -->
                    <div class="form-group">
                        <button class="btn btn-primary btn-block">Login</button>
                    </div>
                </form>
                <p class="text-center">
                    No Account yet ? Please, <a href="{{ path("register") }}">Create your Account</a>.
                </p>
            </div>
        </div>
    </div>
</div>
    

{% endblock %}